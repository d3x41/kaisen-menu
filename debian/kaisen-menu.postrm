#!/bin/sh

set -e

case "$1" in
    remove)
	find /usr/share/applications -name '*.desktop' | \
	    xargs grep -l ^X-Kaisen-Package | \
	    xargs rm -f || true
    ;;
esac

rm -f /etc/xdg/menus/applications-merged/kaisenlinux.menu >/dev/null 2>&1 || true
rm -f /etc/xdg/menus/xfce-applications.menu >/dev/null 2>&1 || true
